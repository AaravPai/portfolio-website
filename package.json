{
  "name": "portfolio-website",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "tsc -b && vite build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,md}\"",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run src/test/integration/",
    "test:performance": "vitest run src/test/performance.test.ts",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:visual": "cypress run --spec 'cypress/e2e/visual-regression.cy.ts'",
    "test:accessibility": "cypress run --spec 'cypress/e2e/accessibility.cy.ts'",
    "test:all": "npm run test:run && npm run test:e2e",
    "lighthouse": "lhci autorun",
    "lighthouse:desktop": "lighthouse http://localhost:4173 --preset=desktop --output=html --output-path=./lighthouse-desktop.html",
    "lighthouse:mobile": "lighthouse http://localhost:4173 --preset=mobile --output=html --output-path=./lighthouse-mobile.html",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "deploy": "node scripts/deploy.js",
    "deploy:netlify": "node scripts/deploy.js netlify",
    "deploy:vercel": "node scripts/deploy.js vercel",
    "deploy:github": "node scripts/deploy.js github-pages",
    "deploy:dry-run": "node scripts/deploy.js --dry-run",
    "pre-deploy": "npm run type-check && npm run lint && npm run test:run && npm run build",
    "post-deploy": "npm run lighthouse"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "emailjs-com": "^3.2.0",
    "formik": "^2.4.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "yup": "^1.7.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@cypress/vite-dev-server": "^7.0.0",
    "@eslint/js": "^9.33.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "audit-ci": "^7.1.0",
    "cypress": "^15.2.0",
    "cypress-axe": "^1.7.0",
    "cypress-visual-regression": "^5.3.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "terser": "^5.44.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.4"
  }
}
